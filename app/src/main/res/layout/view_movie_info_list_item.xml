<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

	<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:id="@+id/lst_movie_info"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<androidx.cardview.widget.CardView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:layout_constraintTop_toTopOf="parent">

			<androidx.constraintlayout.widget.ConstraintLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="5dp">

				<ImageView
					android:id="@+id/img_movie_poster"
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:layout_marginStart="8dp"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintTop_toTopOf="parent"
					tools:src="@tools:sample/avatars"
					android:contentDescription="@string/movie_poster_image" />

				<TextView
					android:id="@+id/movie_title"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="8dp"
					android:text="@{movieInfo.title}"
					android:textColor="@color/black"
					android:textSize="20sp"
					app:layout_constraintStart_toEndOf="@id/img_movie_poster"
					app:layout_constraintTop_toTopOf="@id/img_movie_poster"
					tools:text="@tools:sample/first_names" />

				<TextView
					android:id="@+id/movie_release_date"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="8dp"
					android:text="@{movieInfo.release_date}"
					android:textColor="@color/black"
					android:textSize="16sp"
					app:layout_constraintStart_toEndOf="@id/img_movie_poster"
					app:layout_constraintTop_toBottomOf="@id/movie_title"
					tools:text="@tools:sample/last_names" />

			</androidx.constraintlayout.widget.ConstraintLayout>
		</androidx.cardview.widget.CardView>
	</androidx.constraintlayout.widget.ConstraintLayout>

	<data>

		<import type="android.view.View" />

		<variable
			name="movieInfo"
			type="com.rsdev.mymovies.model.movie.MovieInfo" />
	</data>

</layout>